<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_item"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="6dp">

        <ImageView
            android:id="@+id/imageDevice"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/ic_phone_android_blue"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/text_deviceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DeviceName"
            android:textColor="#1f4068"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="9dp"
            app:layout_constraintStart_toEndOf="@+id/imageDevice"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            app:layout_constraintStart_toStartOf="@+id/text_deviceName"
            app:layout_constraintTop_toBottomOf="@+id/text_deviceName" />
        <View
            android:layout_width="380sp"
            android:layout_height="1dp"
            android:background="#1f4068"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />





    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>